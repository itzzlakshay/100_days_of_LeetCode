class Solution {
    public ListNode mergeNodes(ListNode head) {
        ListNode node = head.next;
        ListNode temp = node;

        while(temp!=null){
            int sum = 0;

            while(temp.val!=0){
                sum += temp.val;
                temp = temp.next;
            }
            node.val = sum;
            temp = temp.next;
            node.next = temp;
            node = temp;
        }

        head = head.next;
        
        return head;
    }
}
